    <title>Meine Top Anime Auswahl</title>
</head>
<body>
<input type="checkbox" id="toggle">
<nav>
    <div class="nav-Title">
        <h1>Meine Top Anime</h1> <!-- overwritten -->
    </div>
    <div>
        <ul class="nav-List">   <!-- Create List -->
            <a href="/" class="nav-link"> <!-- Links -->
                <li class="nav-item">Home</li><!-- Create new Items -->
            </a>
            <a href="/Add" class="nav-link"> <!-- Links -->
                <li  class="nav-item">Add</li><!-- Create new Items -->
            </a>
            <a href="#" class="nav-link"> <!-- Links -->
                <li class="nav-item">About</li><!-- Create new Items -->
            </a>
            <a href="#" class="nav-link"> <!-- Links -->
                <li class="nav-item">Contact</li><!-- Create new Items -->
            </a>
            <a href="#">
                <li id="nav-login" class="nav-item">Login</li>
            </a>
        </ul>
    </div>
    <label class="navbar-toggle" for="toggle">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </label>
</nav>
<div class="media-screen-sortierung">
    <div class="bild-sortierung">  <!-- Picture sorting -->
        <% if(filme){ %>    <!-- Foreach function for the films -->
        <% for (let j = 0; j < filme.length; j++) { %>
        <div class="film-box">
            <div class="Film" id="Film">
                <h2><%= filme[j].Titel %></h2>
                <img src="<%= filme[j].Img %>">
                <div class="statistik-sortierung">
                    <div class="statistik">
                        <p>Rating:</p>
                    </div>
                    <p id="sterne">
                        <% for (let k = 0; k < 10; k++) { %>
                            <% if (k < filme[j].Statistik) { %>
                                ⭐
                            <% } else { %>
                                ☆
                            <% } %>
                        <% } %>
                    </p>
                </div>
                <a href="http://localhost:3000/<%= filme[j].FilmID %>">
                    <div class="serien-link">Hier geht es zur Serie</div>
                </a>
            </div>
        </div>
        <%}}%>
    </div>
</div>
</body>
</html>