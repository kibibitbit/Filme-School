<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/CSS/Default.css">
    <title>Add a new film</title>
</head>
<body>
<button type="submit"><a href="/">Home</a></button>
<div class="add-all">
<form action="/create" method="POST">
    <div class="block">
        <label for="FilmID">ID: (Delete)</label>
        <input type="number" name="FilmID">
    </div>
    <button type="submit">Delete</button>
    <div class="block">
        <label for="FSK">FSK</label>
        <select name="FSK" required>
            <% for (var i = 1; i <= 10; i++) { %>
                <option value="<%= i %>"><%= i %></option>
            <% } %>
        </select>
    </div>
    <div class="block">
        <label for="Description">Beschreibung:</label>
        <input type="text" name="Description" required>
    </div>
    <div class="block">
        <label for="Img">Bild:</label>
        <input type="url" name="Img" required/>
    </div>
    <div class="block">
        <label for="Titel">Titel:</label>
        <input type="text" name="Titel" required/>
    </div>
    <div class="block">
        <label for="Serienlink">Serien Link:</label>
        <input type="url" name="Serienlink" required>
    </div>
    <div class="block">
        <label for="Statistik">Bewertung:</label>
        <select name="Statistik" required>
            <% for (var j = 1; j <= 10; j++) { %>
                <option value="<%= j %>"><%= j %></option>
            <% } %>
        </select>
    </div>
    <div class="block">
        <button type="submit">Add</button>
        <button type="reset">Reset</button>
    </div>
</form>
</div>
</body>
</html>